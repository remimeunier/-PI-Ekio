<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="450dp">

        <ImageView
            android:layout_width="325dp"
            android:layout_height="325dp"
            android:id="@+id/circle1"
            android:scaleType="fitXY"
            android:src="@drawable/circle1"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:layout_width="325dp"
            android:layout_height="325dp"
            android:id="@+id/circle2"
            android:scaleType="fitXY"
            android:src="@drawable/circle2"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_horizontal"/>


        <ImageButton
            android:layout_width="325dp"
            android:layout_height="325dp"
            android:src="@drawable/finding"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:id="@+id/findingLoupe"
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal"/>
    </FrameLayout>

    <ImageView
        android:layout_width="370dp"
        android:layout_height="440dp"
        android:id="@+id/preview_display"
        android:scaleType="fitCenter"
        android:layout_marginLeft="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/preview_display">

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/chooseToFind"
            android:layout_below="@id/preview_display"
            android:background="@android:color/transparent"
            android:onClick="userChoice"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/choosToSave"
            android:layout_below="@id/preview_display"
            android:layout_alignLeft="@id/chooseToFind"
            android:background="@android:color/transparent"
            android:onClick="userChoice"/>

    </LinearLayout>



</RelativeLayout>