<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:layout_gravity="center_vertical"
        android:paddingTop="200px">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/findingLoupe"
            android:longClickable="false"
            android:src="@drawable/finding"
            android:clickable="true" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/circle1"
            android:longClickable="false"
            android:src="@drawable/circle1"
            android:clickable="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/circle2"
            android:longClickable="false"
            android:src="@drawable/circle2"
            android:clickable="true"
            android:layout_gravity="center" />

    </FrameLayout>

    <ImageView
        android:layout_width="370dp"
        android:layout_height="440dp"
        android:id="@+id/preview_display"
        android:layout_marginLeft="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/preview_display">

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/chooseToFind"
            android:layout_below="@id/preview_display"
            android:background="@android:color/transparent"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/choosToSave"
            android:layout_below="@id/preview_display"
            android:layout_alignLeft="@id/chooseToFind"
            android:background="@android:color/transparent"/>

    </LinearLayout>

</LinearLayout>